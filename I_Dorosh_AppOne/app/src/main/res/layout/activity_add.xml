<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.idorosh.i_dorosh_appone.Add">

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/carMake"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColorHint="#1e68b6"
        android:hint="Car Make"
        android:gravity="center_horizontal"
        android:layout_below="@+id/newCarLabel"
        android:layout_alignLeft="@+id/carYear"
        android:layout_alignStart="@+id/carYear" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/carModel"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:textColorHint="#1e68b6"
        android:hint="Car Model"
        android:gravity="center_horizontal"
        android:layout_below="@+id/carMake"
        android:layout_alignLeft="@+id/carMake"
        android:layout_alignStart="@+id/carMake" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/carYear"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#1e68b6"
        android:hint="Car Year"
        android:layout_marginTop="45dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/carModel"
        android:layout_alignLeft="@+id/carPrice"
        android:layout_alignStart="@+id/carPrice" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="New Car"
        android:id="@+id/newCarLabel"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:background="#1e68b6"
        android:paddingLeft="125dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/carPrice"
        android:layout_gravity="center_horizontal"
        android:textColorHint="#1e68b6"
        android:hint="Car Price"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:layout_below="@+id/carYear"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="enter car make"
        android:id="@+id/textView2"
        android:layout_below="@+id/carMake"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="enter car model"
        android:id="@+id/textView3"
        android:gravity="center_horizontal"
        android:layout_below="@+id/carModel"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="enter car year"
        android:id="@+id/textView4"
        android:gravity="center_horizontal"
        android:layout_alignTop="@+id/carPrice"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="enter car price"
        android:id="@+id/textView5"
        android:layout_below="@+id/carPrice"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
