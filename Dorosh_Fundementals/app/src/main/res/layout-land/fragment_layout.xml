

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="match_parent">



    <fragment class="com.idorosh.dorosh_fundementals.TitlesFragment"
        android:id="@+id/titles"
        android:layout_width="300dp"
        android:layout_height="250dp"

        android:layout_marginTop="50dp" />



    <FrameLayout android:id="@+id/details" android:layout_weight="1"
        android:layout_width="340dp" android:layout_height="match_parent"
        android:background="?android:attr/detailsElementBackground"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <TextView
            android:layout_width="274dp"
            android:layout_height="176dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/plot"
            android:layout_gravity="center"
            android:singleLine="false"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Plot"
            android:id="@+id/textView2"
            android:layout_gravity="left|top"
            android:textColor="#1285a6"
            android:layout_above="@+id/detailPlot"
            android:layout_alignLeft="@+id/detailPlot"
            android:layout_alignStart="@+id/detailPlot"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/year"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/detailGenre"
            android:layout_alignStart="@+id/detailGenre"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/genre"
            android:layout_gravity="center_horizontal|top"
            android:layout_below="@+id/detailTitle"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="The Last Ship"
            android:id="@+id/title"
            android:gravity = "center"
            android:layout_gravity="center_horizontal|top"
            android:textColor="#1285a6"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp" />

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/progressBar1"
            android:layout_gravity="center"
            android:layout_weight="0.11"
            android:indeterminate="false"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/titles"
            android:layout_alignEnd="@+id/titles" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Released"
            android:id="@+id/textView4"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="5dp"
            android:textColor="#2a7f9e"
            android:layout_marginLeft="105dp" />
    </FrameLayout>


    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/searchBar"
        android:hint="Search Show"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchButton"
        android:textColor="#0f6d91"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/searchBar"
        android:layout_toEndOf="@+id/searchBar" />

</RelativeLayout>
